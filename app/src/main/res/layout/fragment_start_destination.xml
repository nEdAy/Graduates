<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_start"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragment.game.StartDestinationFragment">

    <TextView
        android:id="@+id/tv_start_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/tv_start_b"
        android:textColor="@color/base_color_text_black"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_start_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_start_b"
        android:text="@string/start_b"
        android:textColor="@color/base_color_text_black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/rg_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_start_3"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/rb_start_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/rb_bg_1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/start_b_0" />

        <Button
            android:id="@+id/rb_start_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/rb_bg_2"
            android:button="@null"
            android:gravity="center"
            android:text="@string/start_b_1" />

        <Button
            android:id="@+id/rb_start_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/rb_bg_3"
            android:button="@null"
            android:gravity="center"
            android:text="@string/start_b_2" />

        <Button
            android:id="@+id/rb_start_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/rb_bg_2"
            android:button="@null"
            android:gravity="center"
            android:text="@string/start_b_3" />

        <Button
            android:id="@+id/rb_start_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/rb_bg_1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/start_b_4" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_start"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/ImageViewDescription"
        android:src="@mipmap/btn_forward" />

</RelativeLayout>
