<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/btn_start" />

    <ImageView
        android:id="@+id/btn_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_top"
        android:padding="5dp"
        android:src="@drawable/btn_option" />

    <ImageView
        android:id="@+id/btn_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_badge"
        android:layout_toStartOf="@+id/btn_badge"
        android:padding="5dp"
        android:src="@drawable/btn_hint"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btn_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:src="@drawable/btn_top"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/btn_exit"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btn_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_top"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:src="@drawable/btn_share"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btn_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_start"
        android:layout_toStartOf="@+id/btn_community"
        android:padding="5dp"
        android:src="@drawable/btn_replay"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btn_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_badge"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:src="@drawable/btn_community"
        tools:ignore="ContentDescription" />
</RelativeLayout>
