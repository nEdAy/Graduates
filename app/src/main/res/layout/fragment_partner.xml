<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_about"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragment.game.PartnerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/bg_partner_0"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="60dp">

        <TextView
            android:id="@+id/tv_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@mipmap/bg_car_1"
            android:padding="5dp"
            android:text="@string/partner"
            android:textColor="@color/lsxa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_partner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/ImageViewDescription"
                    android:src="@mipmap/partner" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/sv_partner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fillViewport="false"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_partner_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="@string/partner_plus"
                    android:textColor="@color/lsxa" />
            </ScrollView>

            <LinearLayout
                android:id="@+id/ll_partner_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_partner_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/ImageViewDescription"
                    android:scaleType="centerInside"
                    android:src="@mipmap/partner_0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/partner_0"
                    android:textColor="@color/lsxa" />

                <ImageView
                    android:id="@+id/iv_partner_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/ImageViewDescription"
                    android:scaleType="centerInside"
                    android:src="@mipmap/partner_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/partner_1"
                    android:textColor="@color/lsxa" />

                <ImageView
                    android:id="@+id/iv_partner_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/ImageViewDescription"
                    android:scaleType="centerInside"
                    android:src="@mipmap/partner_2" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/partner_2"
                    android:textColor="@color/lsxa" />

                <ImageView
                    android:id="@+id/iv_partner_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/ImageViewDescription"
                    android:scaleType="centerInside"
                    android:src="@mipmap/partner_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/partner_3"
                    android:textColor="@color/lsxa" />

                <ImageView
                    android:id="@+id/iv_partner_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/ImageViewDescription"
                    android:scaleType="centerInside"
                    android:src="@mipmap/partner_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/partner_4"
                    android:textColor="@color/lsxa" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_partner_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_partner_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/ImageViewDescription"
                    android:scaleType="centerInside"
                    android:src="@mipmap/partner_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/partner_5"
                    android:textColor="@color/lsxa" />

                <ImageView
                    android:id="@+id/iv_partner_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/ImageViewDescription"
                    android:scaleType="centerInside"
                    android:src="@mipmap/partner_6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/partner_6"
                    android:textColor="@color/lsxa" />

                <ImageView
                    android:id="@+id/iv_partner_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/ImageViewDescription"
                    android:scaleType="centerInside"
                    android:src="@mipmap/partner_7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/partner_7"
                    android:textColor="@color/lsxa" />

                <ImageView
                    android:id="@+id/iv_partner_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/ImageViewDescription"
                    android:scaleType="centerInside"
                    android:src="@mipmap/partner_8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/partner_8"
                    android:textColor="@color/lsxa" />

                <ImageView
                    android:id="@+id/iv_partner_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:contentDescription="@string/ImageViewDescription"
                    android:scaleType="centerInside"
                    android:src="@mipmap/partner_9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/partner_9"
                    android:textColor="@color/lsxa" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/btn_back" />
</RelativeLayout>
