<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <style name="kryptanium_ad_primary_text">
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 主要文字-亮背景 -->
    <style name="kryptanium_ad_primary_text_light" parent="kryptanium_ad_primary_text">
        <item name="android:textColor">#de000000</item>
    </style>
    <style name="kt_ad_flag_style" parent="kryptanium_hint_text">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="kt_ad_flag_fullscreen_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="kt_ad_title_style" parent="kryptanium_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="kt_ad_content_style" parent="kryptanium_primary_text">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="kt_ad_action_style" parent="kt_align_parent_end">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/kt_ad_theme_color</item>
        <item name="android:background">@drawable/kt_ad_action_border</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/kt_content_padding</item>
        <item name="android:paddingRight">@dimen/kt_content_padding</item>
        <item name="android:textAllCaps" tools:targetApi="ICE_CREAM_SANDWICH">true</item>
    </style>


