    </style>
    <!-- 全局关闭按钮 -->
    <style name="kryptanium_global_close" parent="kt_align_parent_end">
        <item name="android:id">@id/kt_close</item>
        <item name="android:layout_width">@dimen/kt_global_close_icon_width</item>
        <item name="android:layout_height">@dimen/kt_titlebar_height</item>
        <item name="android:paddingTop">6dp</item>
