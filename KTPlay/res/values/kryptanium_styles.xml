    <style name="ktplay_style_subtitle_line" parent="kryptanium_hint_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">24dp</item>
        <!--<item name="android:background">@color/kt_theme_subtitle_background</item>-->
        <item name="android:paddingLeft">@dimen/kryptanium_listitem_hpadding</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">
            @dimen/kryptanium_listitem_hpadding
        </item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">locale</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!-- 分隔线 -->
    <style name="kryptanium_seperate_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/kryptanium_titlebar_line_height</item>
        <item name="android:background">@color/kt_theme_listitem_dividercolor</item>
    </style>

    <!-- 链接文字 -->
    <style name="kryptanium_link_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/kt_theme_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps" tools:targetApi="ICE_CREAM_SANDWICH">true</item>
    </style>

    <style name="kryptanium_link_text_large" parent="kryptanium_link_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="kryptanium_link_text_small" parent="kryptanium_link_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="kryptanium_link_text_small_align_parent_end" parent="kt_align_parent_end">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/kt_theme_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 输入框 -->
    <style name="kryptanium_edittext">
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/kryptanium_edittext_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/kt_theme_primary_textcolor</item>
        <item name="android:textColorHint">@color/kt_theme_hint_textcolor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">locale</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- 聊天输入框，特例 -->
    <style name="kryptanium_edittext_chat">
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:background">@drawable/kryptanium_colorbg_white_with_border</item>
        <item name="android:textSize">@dimen/kryptanium_fontsize_middle</item>
        <item name="android:textColor">@color/kryptanium_base_color_black</item>
        <item name="android:cursorVisible">true</item>
    </style>


    <!-- 列表 -->
    <style name="kryptanium_list">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@color/kt_theme_listitem_dividercolor</item>
        <item name="android:dividerHeight">@dimen/kryptanium_titlebar_line_height</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:requiresFadingEdge" tools:targetApi="ice_cream_sandwich">none</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:fadeScrollbars" tools:targetApi="eclair">false</item>
        <item name="android:overScrollMode" tools:targetApi="gingerbread">never</item>
        <item name="android:footerDividersEnabled" tools:targetApi="cupcake">false</item>
        <item name="android:fadeEnabled" tools:targetApi="donut">false</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:animationCache">false</item>
        <!--<item name="android:overScrollMode" tools:targetApi="gingerbread">never</item>-->
        <!--  <item name="android:listSelector">#1e000000</item> -->
    </style>

    <!-- 列表项 -->
    <style name="kryptanium_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/kryptanium_listitem_minheight</item>
        <item name="android:paddingLeft">@dimen/kryptanium_listitem_hpadding</item>
        <item name="android:paddingRight">@dimen/kryptanium_listitem_hpadding</item>
        <!--  <item name="android:paddingTop">8dp</item>
         <item name="android:paddingBottom">8dp</item> -->
        <item name="android:background">@drawable/kryptanium_listview_item_bg</item>
        <!-- <item name="android:gravity">center_vertical</item> -->
    </style>


    <!-- 列表项-带上下边距 -->
    <style name="kryptanium_list_item_with_verticalpadding" parent="kryptanium_list_item">
        <item name="android:paddingTop">@dimen/kryptanium_listitem_vpadding</item>
        <item name="android:paddingBottom">@dimen/kryptanium_listitem_vpadding</item>
    </style>


    <!-- 列表项-列表项不可点击 -->
    <style name="kryptanium_list_item_with_noclick" parent="kryptanium_list_item">
        <item name="android:background">@color/kt_theme_listitem_background</item>
    </style>

    <!-- 
    列表项-单独的文字 
    使用kryptanium_list_item + kryptanium_main_text（内嵌）
    注意，如果kryptanium_main_text有改动，必须同时改动此处
    -->
    <style name="kryptanium_list_item_simpletext" parent="kryptanium_list_item">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/kt_theme_primary_textcolor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">locale</item>
    </style>

    <!-- 大文字 -->
    <style name="kryptanium_large_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/kt_theme_title_textcolor</item>
    </style>

    <style name="kryptanium_large_text_light" parent="kryptanium_large_text">
        <item name="android:textColor">@color/kt_theme_primary_textcolor</item>
    </style>

    <style name="kryptanium_large_text_dark" parent="kryptanium_large_text">
        <item name="android:textColor">@color/kt_primary_text_default_material_dark</item>
    </style>

    <style name="kryptanium_primary_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/kt_theme_primary_textcolor</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">locale</item>
    </style>

    <style name="kryptanium_primary_text_link">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/kt_theme_primary_textcolor</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">locale</item>
        <item name="android:textAllCaps" tools:targetApi="ICE_CREAM_SANDWICH">true</item>
    </style>

    <style name="kryptanium_primary_text_align_parent_right" parent="kt_align_parent_end">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/kt_theme_primary_textcolor</item>
    </style>

    <!-- 主要文字-亮背景 -->
    <style name="kryptanium_primary_text_light" parent="kryptanium_primary_text">
        <item name="android:textColor">@color/kt_theme_primary_textcolor</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">locale</item>
    </style>

    <style name="kryptanium_primary_text_light_bold" parent="kryptanium_primary_text_light">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 主要文字-暗背景 -->
    <style name="kryptanium_primary_text_dark" parent="kryptanium_primary_text">
        <item name="android:textColor">@color/kt_theme_primary_textcolor_dark</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">locale</item>
    </style>

    <!-- 主要文字 -->
    <style name="kryptanium_menu_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/kt_state_text</item>
    </style>

    <!-- 次要文字 -->
    <style name="kryptanium_secondary_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/kt_theme_secondary_textcolor</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
    </style>

    <style name="kryptanium_secondary_text_align_parent_end" parent="kt_align_parent_end">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/kt_theme_secondary_textcolor</item>
    </style>

    <!-- 次要文字-亮背景 -->
    <style name="kryptanium_secondary_text_light" parent="kryptanium_secondary_text">
        <item name="android:textColor">@color/kt_theme_secondary_textcolor</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">locale</item>
    </style>

    <!-- 次要文字-暗背景 -->
    <style name="kryptanium_secondary_text_dark" parent="kryptanium_secondary_text">
        <item name="android:textColor">@color/kt_theme_secondary_textcolor_dark</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">locale</item>
    </style>

    <style name="kryptanium_secondary_text_dark_align_parent_end" parent="kt_align_parent_end">
        <item name="android:textColor">@color/kt_theme_secondary_textcolor_dark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Action文字(如展开/收起/更多等) -->
    <style name="kryptanium_action_text_light" parent="kryptanium_secondary_text_light">
        <item name="android:textColor">@color/kt_theme_color</item>
    </style>

    <!-- 再次要文字 -->
    <style name="kryptanium_hint_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/kt_theme_hint_textcolor</item>
    </style>

    <style name="kryptanium_hint_text_align_parent_end" parent="kt_align_parent_end">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/kt_theme_hint_textcolor</item>
    </style>

    <style name="kryptanium_tag_base">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
