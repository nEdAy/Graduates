<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="kryptanium_textview_2_button">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>


    <!-- 各种常用按钮的样式 -->

    <style name="kryptanium_buttom_style_download"> <!-- 下载按钮 -->
        <item name="android:layout_width">@dimen/kryptanium_msgbox_item_textview_down_width</item>
        <item name="android:layout_height">@dimen/kryptanium_msgbox_item_textview_down_height</item>
        <item name="android:padding">@dimen/kryptanium_buttom_icon_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/kryptanium_btn_download_icon</item>
        <item name="android:background">@drawable/kryptanium_colorbg_green</item>
    </style>

    <style name="kryptanium_buttom_style_delete"> <!-- 话题和相册的删除按钮 -->
        <item name="android:layout_width">@dimen/kryptanium_button_title_width</item>
        <item name="android:layout_height">@dimen/kryptanium_button_title_height</item>
        <item name="android:padding">@dimen/kryptanium_buttom_icon_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/kryptanium_button_delete_icon</item>
        <item name="android:background">@drawable/kryptanium_colorbg_tran_black_btn_delete</item>
    </style>

    <style name="kryptanium_button_style_main"> <!-- 主按钮 -->
        <item name="android:layout_width">236dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:textColor">@color/kryptanium_text_white</item>
        <item name="android:textSize">@dimen/kryptanium_fontsize_large</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/kryptanium_button_bg</item>
        <item name="android:paddingLeft">@dimen/kt_content_padding</item>
        <item name="android:paddingRight">@dimen/kt_content_padding</item>
        <item name="android:textAllCaps" tools:targetApi="ICE_CREAM_SANDWICH">true</item>
    </style>

    <style name="kryptanium_button_style_main_align_parent_end" parent="kt_align_parent_end"> <!-- 主按钮 -->
        <item name="android:layout_width">236dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:textColor">@color/kryptanium_text_white</item>
        <item name="android:textSize">@dimen/kryptanium_fontsize_large</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/kryptanium_button_bg</item>
        <item name="android:paddingLeft">@dimen/kt_content_padding</item>
        <item name="android:paddingRight">@dimen/kt_content_padding</item>

    </style>

    <style name="kryptanium_button_transparent">
        <item name="android:layout_width">236dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:textColor">@color/kt_theme_color</item>
        <item name="android:background">@drawable/kryptanium_button_frame</item>
        <item name="android:textSize">@dimen/kryptanium_fontsize_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps" tools:targetApi="ICE_CREAM_SANDWICH">true</item>
    </style>

    <!--<style name="kryptanium_button_signup_style"> &lt;!&ndash; 注册按钮 &ndash;&gt;-->
