    <style name="kryptanium_tag" parent="kryptanium_tag_base">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/kryptanium_tag_bg</item>
    </style>

    <style name="kryptanium_switcher" parent="kt_align_parent_end">
