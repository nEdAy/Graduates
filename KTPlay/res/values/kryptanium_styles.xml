    <style name="kryptanium_checkbox">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/kryptanium_checkbox_circle</item>
        <item name="android:button">@null</item>
    </style>

    <style name="kryptanium_vote_checkbox_styles">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/kryptanium_vote_checkbox_selector</item>
        <item name="android:button">@null</item>

