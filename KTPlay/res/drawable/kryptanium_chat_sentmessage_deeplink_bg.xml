<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/kt_theme_popup_background" />
            <corners android:radius="5dp" />
            <stroke android:color="#99dddddd" android:width="0.5dp" />
        </shape>
    </item>

    <item android:drawable="@color/kryptanium_base_color_light_gray" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/kryptanium_base_color_light_gray" />
            <corners android:radius="5dp" />
            <stroke android:color="#99dddddd" android:width="0.5dp" />
        </shape>
    </item>
</selector>