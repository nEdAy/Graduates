<?xml version="1.0" encoding="utf-8"?>

<!-- 列表项-黑名单用户（聊天） -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    style="@style/kryptanium_list_item">

    <TextView
        android:id="@id/kt_item_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/kryptanium_user_login_edit_height"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/kt_common_click_button"
        android:singleLine="true"
        style="@style/kryptanium_primary_text_light" />

    <TextView
        android:id="@+id/kt_common_click_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/kryptanium_user_login_edit_height"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"
        android:text="@string/kt_unblock"
        android:textColor="@color/kt_theme_color"
        android:textSize="@dimen/kryptanium_text_size_standard" />

</RelativeLayout>
