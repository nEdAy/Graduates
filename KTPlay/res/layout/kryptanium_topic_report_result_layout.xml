<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/kryptanium_user_set_info_layout_paddingTop">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/kryptanium_icon_alert_done"
        android:gravity="center" />

    <TextView
        style="@style/kryptanium_large_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@string/kt_report_success" />


    <TextView
        style="@style/kryptanium_secondary_text_light"
        android:layout_width="@dimen/kryptanium_user_set_info_layout_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="@string/kt_report_submitted_description" />

    <TextView
        android:id="@+id/kt_text"
        style="@style/kryptanium_button_style_main"
        android:layout_width="@dimen/kryptanium_user_set_info_layout_width"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="@string/kt_confirm" />
</LinearLayout>