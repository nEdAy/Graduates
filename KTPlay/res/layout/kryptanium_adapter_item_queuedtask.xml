<?xml version="1.0" encoding="utf-8"?>

<!-- 列表项 - 用户收到的称赞 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/kryptanium_list_item"
    android:orientation="horizontal"
    android:layout_height="26dp"
    android:background="@null">

    <TextView
        android:id="@id/kt_item_title"
        style="@style/kryptanium_primary_text_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_gravity="center_vertical|left|start"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

    <ImageView
        android:id="@id/kt_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|right|end"
        android:src="@drawable/kryptanium_close_icon" />

    <ProgressBar
        android:id="@id/kt_progress"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:max="100"
        android:layout_gravity="bottom"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/kryptanium_progress_horizontal"
        android:layout_marginBottom="5dp" />
</FrameLayout>