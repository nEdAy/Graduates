<?xml version="1.0" encoding="utf-8"?>

<!-- 列表项 - 收件箱 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/kryptanium_list_item_with_noclick"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="8dp">

    <include
        android:id="@id/kt_item_icon"
        layout="@layout/kt_item_icon" />

    <!-- 标题 -->
    <TextView
        android:id="@id/kt_item_title"
        style="@style/kryptanium_primary_text_light_bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/kt_item_icon"
        android:layout_toLeftOf="@id/kt_action"
        android:layout_toRightOf="@id/kt_item_icon"
        android:layout_toStartOf="@id/kt_action"
        android:textColor="@color/kt_state_text" />

    <!-- 内容 -->
    <TextView
        android:id="@id/kt_item_content"
        style="@style/kryptanium_primary_text_light"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/kt_item_title"
        android:layout_alignStart="@+id/kt_item_title"
        android:layout_below="@+id/kt_item_title"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2.5dp"
        android:layout_toLeftOf="@id/kt_action"
        android:layout_toStartOf="@id/kt_action"
        android:textColor="@color/kt_state_text" />

    <TextView
        android:id="@id/kt_item_time"
        style="@style/kryptanium_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/kt_item_title"
        android:layout_alignStart="@+id/kt_item_title"
        android:layout_below="@+id/kt_item_content"
        android:layout_marginTop="2.5dp"
        android:textColor="@color/kt_state_text" />

    <TextView
        android:id="@+id/kt_common_click_button"
        style="@style/kryptanium_link_text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/kt_item_content"
        android:layout_alignEnd="@+id/kt_item_content"
        android:layout_below="@+id/kt_item_content"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/kt_item_time"
        android:layout_toLeftOf="@id/kt_action"
        android:layout_toRightOf="@id/kt_item_time"
        android:layout_toStartOf="@id/kt_action"
        android:gravity="right|end"
        android:includeFontPadding="false"
        android:text="@string/kt_more"
        android:visibility="gone" />

    <!-- Action Button -->
    <TextView
        android:id="@id/kt_action"
        style="@style/kryptanium_button_style_main_align_parent_end"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:minWidth="60dp"
        android:visibility="gone" />
</RelativeLayout>

