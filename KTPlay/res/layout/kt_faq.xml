<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/kt_support"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/kt_theme_listitem_background"
    android:layout_marginBottom="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/kt_icon"
            style="@style/kryptanium_subtitle_icon"
            android:layout_margin="@dimen/kt_content_padding"
            android:src="@drawable/kt_faq"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@id/kt_item_title"
            style="@style/kryptanium_subtitle_text"
            android:text="@string/kt_faq"
            android:textAllCaps="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

    <com.ktplay.widget.KTListViewInScrollView
        android:id="@+id/kt_common_listview"
        style="@style/kryptanium_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0.5dp"
        android:fadingEdge="none"
        android:footerDividersEnabled="true" />

