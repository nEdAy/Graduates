<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="17.5dp"
    android:paddingRight="17.5dp">

    <TextView
        android:id="@+id/kt_common_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="17.5dp"
        android:text="@string/kt_warning_security_verification_times"
        style="@style/kryptanium_secondary_text_light"
        android:layout_centerHorizontal="true"
        android:textAlignment="gravity" />

    <ImageView
        android:id="@+id/kt_common_iv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kt_common_text"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:background="@drawable/kryptanium_icon_alert_failed" />

    <TextView
        android:id="@+id/kt_common_iv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kt_common_iv_1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="@string/kt_security_verification_failure_times"
        style="@style/kryptanium_primary_text_light" />

    <LinearLayout
        android:id="@+id/kt_common_vg_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kt_common_iv_2"
        android:layout_marginTop="17.5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kt_common_view_4"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="@string/kt_try_again"
            style="@style/kryptanium_button_style_main" />

        <TextView
            android:id="@+id/kt_common_view_5"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/kt_skip_security_verification"
            style="@style/kryptanium_link_text_large" />
    </LinearLayout>

    <TextView
        android:id="@+id/kt_common_view_6"
        android:layout_below="@+id/kt_common_iv_2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17.5dp"
        android:text="@string/kt_login_with_other_accounts"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        style="@style/kryptanium_button_style_main" />

</RelativeLayout>
