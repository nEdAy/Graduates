<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/kryptanium_user_set_info_layout_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <!-- 说明-->
        <TextView
            style="@style/kryptanium_hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/kt_verification_email_send" />

        <!-- 输入邮箱-->
        <com.ktplay.widget.KTClearableEditText
            android:id="@id/kt_edit"
            style="@style/kryptanium_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:inputType="textEmailAddress" />

        <!-- 发送按钮-->
        <TextView
            android:id="@id/kt_send"
            style="@style/kryptanium_button_style_main"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="@string/kt_send" />

    </LinearLayout>
</FrameLayout>