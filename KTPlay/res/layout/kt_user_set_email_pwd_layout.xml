<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/kryptanium_user_set_info_layout_width"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingTop="@dimen/kryptanium_user_set_info_layout_paddingTop">

        <ImageView
            android:src="@drawable/kt_icon_email"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/kt_common_iv_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/kryptanium_secondary_text_light"
            android:textColor="@color/kt_imagepreview_blue"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            style="@style/kryptanium_secondary_text_light"
            android:gravity="center_horizontal"
            android:text="@string/kt_set_login_password" />
        <!-- 安全设置 -->

        <com.ktplay.widget.KTClearableEditText
            android:id="@+id/kt_common_iv_2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/kryptanium_user_set_info_edittext_height"
            style="@style/kryptanium_edittext"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="18"
            android:nextFocusDown="@id/kryptanium_user_register_nickname"
            android:paddingLeft="@dimen/kryptanium_user_set_info_edittext_padding"
            android:paddingRight="@dimen/kryptanium_user_set_info_edittext_padding"
            android:singleLine="true" />

        <TextView
            android:id="@+id/kt_common_iv_3"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/kryptanium_user_set_info_edittext_height"
            android:layout_marginTop="@dimen/kryptanium_user_set_info_textview_marginTop"
            android:gravity="center"
            android:text="@string/kt_confirm"
            style="@style/kryptanium_button_style_main" />
    </LinearLayout>

</LinearLayout>
