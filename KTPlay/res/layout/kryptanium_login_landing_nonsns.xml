<?xml version="1.0" encoding="utf-8"?>

<!-- 登录界面首页 -不包含SNS的情况 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 内容区 -->
    <RelativeLayout
        android:layout_width="@dimen/kryptanium_login_content_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <include
            layout="@layout/kt_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kt_logo_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" />

        <!-- KTplay Title -->
        <!--<TextView-->
        <!--android:id="@+id/kt_common_iv_1"-->
        <!--style="@style/kryptanium_primary_text_light"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_below="@+id/kt_logo"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="12dp"-->
        <!--android:text="@string/kt_ktplay_slogan" />-->

        <ImageView
            android:id="@+id/kt_common_iv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/kt_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:src="@drawable/kryptanium_icon_people" />

        <LinearLayout
            android:id="@+id/kt_common_inner_vg_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kt_common_iv_2"
            android:orientation="horizontal">

            <!-- 注册按钮 -->
            <TextView
                android:id="@+id/kt_common_iv_3"
                style="@style/kryptanium_button_transparent"
                android:layout_width="fill_parent"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="@string/kt_register" />
            <!-- 登录按钮 -->
            <TextView
                android:id="@+id/kt_common_view_4"
                style="@style/kryptanium_button_style_main"
                android:layout_width="fill_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="@string/kt_login" />
        </LinearLayout>

        <!-- 快速登录按钮 -->
        <TextView
            android:id="@+id/kt_common_iv_4"
            style="@style/kryptanium_button_transparent"
            android:layout_width="fill_parent"
            android:layout_below="@id/kt_common_inner_vg_1"
            android:layout_marginTop="8dp"
            android:text="@string/kt_quick_login" />

        <!-- 用户条款和隐私协议 -->
        <com.ktplay.widget.KTLinkableTextView
            android:id="@+id/kt_common_view_5"
            style="@style/kryptanium_secondary_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kt_common_iv_4"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="8dp"
            android:paddingBottom="24dp"
            android:text="@string/kt_terms_agreement" />
    </RelativeLayout>

</FrameLayout>
</ScrollView>
