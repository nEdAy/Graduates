        <SeekBar
            android:id="@+id/kt_youtube_control_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/kt_youtube_control_video_current_time"
            android:layout_toStartOf="@+id/kt_youtube_control_video_duration" />

        <ImageView
            android:id="@+id/kt_youtube_control_custom_action_left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kryptanium_video_play"
            android:visibility="gone"
            android:padding="8dp"
            android:layout_margin="32dp"
            android:clickable="true"
            android:background="@drawable/kt_webview_youtube_background_item_selected"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/kt_youtube_control_play_button" />

        <ImageView
            android:id="@+id/kt_youtube_control_custom_action_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kryptanium_video_play"
            android:visibility="gone"
            android:padding="8dp"
            android:layout_margin="32dp"
            android:clickable="true"
            android:background="@drawable/kt_webview_youtube_background_item_selected"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/kt_youtube_control_play_button" />

    </RelativeLayout>

</FrameLayout>
