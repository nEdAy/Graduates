<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:minWidth="90dp"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:background="@drawable/kt_touch_feedback_bg">

    <com.ktplay.widget.KTRoundRectImageView
        android:id="@+id/kt_common_iv_1"
        android:layout_width="@dimen/kt_iconsize_large"
        android:layout_height="@dimen/kt_iconsize_large"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/kt_common_iv_2"
        style="@style/kryptanium_secondary_text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:gravity="center_horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textAlignment="center"
        android:textSize="13sp" />

    <ViewStub
        android:id="@id/kt_newmsg"
        android:layout_width="@dimen/kryptanium_new_msg_size"
        android:layout_height="@dimen/kryptanium_new_msg_size"
        android:layout_gravity="right|end"
        android:layout_marginEnd="@dimen/kt_content_padding"
        android:layout_marginRight="@dimen/kt_content_padding"
        android:layout_marginTop="@dimen/kt_content_padding" />
</FrameLayout>
