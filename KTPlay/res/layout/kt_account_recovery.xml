            <!--/>-->

            <!--</LinearLayout>-->
        </FrameLayout>


        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/kt_warning_account_lost"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/kt_content_padding"
            style="@style/kryptanium_primary_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/kt_content_padding">

            <TextView
                android:id="@id/kt_cancel"
                android:text="@string/kt_cancel"
                android:layout_width="140dp"
                style="@style/kryptanium_button_style_main" />

            <TextView
                android:id="@id/kt_confirm"
                android:text="@string/kt_confirm"
                android:layout_width="140dp"
                android:layout_marginStart="@dimen/kt_content_padding"
                style="@style/kryptanium_button_style_main"
                android:layout_marginLeft="@dimen/kt_content_padding" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>