<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@id/kt_translation">

    <!-- 翻译按钮 -->
    <TextView
        android:id="@id/kt_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/kryptanium_link_text"
        android:text="@string/kt_see_translation"
        android:layout_marginTop="@dimen/kt_content_padding" />

    <com.ktplay.widget.KTIndeterminatedProgress
        android:id="@id/kt_progress"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/kryptanium_circle_bg"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

</LinearLayout>