<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/kryptanium_user_set_info_layout_width"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingTop="@dimen/kryptanium_user_set_info_layout_paddingTop">

        <ImageView
            android:id="@+id/kt_common_iv_1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.5dp" />
        <TextView
            android:id="@+id/kt_common_iv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/kryptanium_user_set_info_title_describe_marginBottom"
            style="@style/kryptanium_secondary_text_light"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/kt_imagepreview_blue" />
        <TextView
            android:visibility="gone"
            android:id="@+id/kt_common_iv_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/kryptanium_user_set_info_title_describe_marginBottom"
            style="@style/kryptanium_secondary_text_light"
            android:gravity="center_horizontal" />
        <!-- 安全设置 -->

        <com.ktplay.widget.KTClearableEditText
            android:id="@+id/kt_common_view_4"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/kryptanium_user_set_info_edittext_height"
            style="@style/kryptanium_edittext"
            android:ellipsize="end"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:nextFocusDown="@id/kryptanium_user_register_password"
            android:paddingLeft="@dimen/kryptanium_user_set_info_edittext_padding"
            android:paddingRight="@dimen/kryptanium_user_set_info_edittext_padding"
            android:maxLength="128" />


        <com.ktplay.widget.KTClearableEditText
            android:id="@+id/kt_common_view_5"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/kryptanium_user_set_info_edittext_height"
            style="@style/kryptanium_edittext"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:maxLength="18"
            android:nextFocusDown="@id/kryptanium_user_register_nickname"
            android:paddingLeft="@dimen/kryptanium_user_set_info_edittext_padding"
            android:paddingRight="@dimen/kryptanium_user_set_info_edittext_padding" />

        <TextView
            android:id="@+id/kt_common_view_6"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/kryptanium_user_set_info_edittext_height"
            android:layout_marginTop="@dimen/kryptanium_user_set_info_textview_marginTop"
            android:background="@drawable/kryptanium_button_bg"
            android:gravity="center"
            android:text="@string/kt_confirm"
            android:textColor="@color/kryptanium_text_white"
            android:textSize="@dimen/kryptanium_text_size_medium" />
    </LinearLayout>

</LinearLayout>
