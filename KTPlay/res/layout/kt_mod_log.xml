<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/kryptanium_list_item_with_verticalpadding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- icon -->
        <ImageView
            android:id="@id/kt_item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|start" />

        <!--title-->
        <TextView
            android:id="@id/kt_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/kryptanium_primary_text"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp" />

        <!-- time -->
        <TextView
            android:id="@id/kt_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/kryptanium_hint_text"
            android:layout_gravity="end|right|center_vertical" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Text-->
        <TextView
            android:id="@id/kt_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/kryptanium_secondary_text"
            android:maxLines="1"
            android:textSize="13sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <ImageView
            android:id="@id/kt_action"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/kryptanium_icon_manage"
            android:layout_gravity="end|right|center_vertical" />

    </FrameLayout>


</LinearLayout>