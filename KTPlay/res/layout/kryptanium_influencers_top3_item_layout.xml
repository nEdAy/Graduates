<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kt_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/kryptanium_card_bg">

    <com.ktplay.widget.KTRoundRectImageView
        android:id="@+id/kt_common_iv_1"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:gravity="center_horizontal"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/kt_common_view_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.ktplay.widget.KTCircleImageView
            android:id="@id/kt_item_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true" />

        <com.ktplay.widget.KTEmojiText
            android:id="@id/kt_common_iv_2"
            style="@style/kryptanium_primary_text_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kt_item_avatar"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/kt_common_iv_3"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_below="@+id/kt_common_iv_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/kt_common_inner_vg_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kt_common_iv_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/kt_common_view_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/kt_growth_up_img"
                android:visibility="gone" />

            <TextView
                android:id="@+id/kt_common_view_5"
                style="@style/kryptanium_primary_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/kt_common_view_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kt_common_inner_vg_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:paddingBottom="10dp"
            android:textColor="@color/kt_theme_hint_textcolor"
            android:textSize="12sp" />
    </RelativeLayout>
</FrameLayout>


