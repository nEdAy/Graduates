<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/kryptanium_card_bg_with_padding"
    android:gravity="center_vertical">


    <TextView
        android:id="@+id/kt_common_iv_1"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        style="@style/kryptanium_primary_text_light"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/kt_common_iv_1"
        android:layout_toEndOf="@id/kt_common_iv_1">

        <!-- 内容作者头像 -->
        <include
            layout="@layout/kt_item_avatar"
            android:id="@id/kt_item_avatar"
            android:layout_width="@dimen/kt_avatar_width"
            android:layout_height="@dimen/kt_avatar_height"
            android:gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />


        <!-- 内容作者名称 -->
        <com.ktplay.widget.KTEmojiText
            android:id="@+id/kt_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/kt_item_avatar"
            android:layout_toEndOf="@id/kt_item_avatar"
            android:layout_toLeftOf="@+id/kt_common_iv_3"
            android:layout_toStartOf="@+id/kt_common_iv_3"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            style="@style/kryptanium_primary_text_light" />


        <TextView
            android:id="@+id/kt_common_iv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerInParent="true"
            style="@style/kryptanium_primary_text_align_parent_right"
            android:textSize="14sp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>


