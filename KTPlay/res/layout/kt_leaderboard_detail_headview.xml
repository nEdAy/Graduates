<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/kt_common_description"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/kt_theme_color"
        android:gravity="center"
        android:textColor="@color/kt_theme_primary_textcolor_dark"
        android:textSize="12sp"
        android:text="@string/kt_get_rank_login"
        android:visibility="gone" />

    <TextView
        android:id="@+id/kt_common_view_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/kryptanium_hint_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_below="@+id/kt_common_description"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:enabled="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/kt_common_view_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/kryptanium_hint_text"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:enabled="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/kt_common_description"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp" />
</RelativeLayout>
