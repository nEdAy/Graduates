<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@id/kt_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/kryptanium_primary_text"
        android:textColor="@color/kt_theme_title_textcolor" />

    <TextView
        android:id="@id/kt_item_content"
        style="@style/kryptanium_primary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/kt_content_padding"
        android:paddingStart="@dimen/kt_content_padding" />
</LinearLayout>