<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/kt_common_inner_vg_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/kt_theme_section_background">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/kryptanium_icon_people"
            android:layout_gravity="center_horizontal" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/kt_common_inner_vg_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kt_theme_section_background"
        android:orientation="vertical">

        <com.ktplay.widget.KTCircleImageView
            android:id="@id/kt_item_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <!--排名-->
        <TextView
            android:id="@+id/kt_common_iv_1"
            style="@style/kryptanium_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:maxLines="1" />

        <!--个人签名-->
        <TextView
            android:id="@+id/kt_common_iv_2"
            style="@style/kryptanium_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/kryptanium_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/kt_influence_points" />

            <!--影响力-->
            <TextView
                android:id="@id/kt_common_iv_3"
                style="@style/kryptanium_primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/kt_content_padding" />

            <ImageView
                android:id="@+id/kt_common_view_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/kt_content_padding" />

            <!--成长值-->
            <TextView
                android:id="@id/kt_growth_rate"
                style="@style/kryptanium_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/kt_content_padding"
                android:text="25%"
                android:textColor="#FF16AE2B" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kt_common_inner_vg_3"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/kt_theme_section_background"
        android:minHeight="40dp"
        android:orientation="vertical">

        <View style="@style/kryptanium_seperate_line" />

        <TextView
            style="@style/kryptanium_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/kt_see_rank"
            android:textColor="@color/kt_theme_color" />

    </LinearLayout>

    <TextView
        style="@style/kryptanium_primary_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="@string/kt_about_Influence" />
</LinearLayout>